                var DOBirth = $("#DOBirth").val();
                var Gender = $("#Gender").val();3
                var City = $("#City").val();
                var MStatus = $("#MStatus").val();
                var Departments = $("#Departments").val();
                var OfcNo = $("#OfcNo").val();
                var GName = $("#GName").val();
                var GPhoneNo = $("#GPhoneNo").val(); 3
                var Occupation = $("#Occupation").val();
                var CDrName = $("#CDrName").val();
                var esponsible = $("#Responsible").val();
                var CRelationToPatient = $("#RelationToPatient").val();
                
                
                
                $.ajax({

                    url:"http://localhost:35003/api/APPOINTMENT",
